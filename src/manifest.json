{
  "manifest_version": 2,
  "name": "Firefox Quick Suggest Weather",
  "version": "1.2a",
  "description": "Adds a weather forecast item to the Firefox Urlbar.",
  "applications": {
    "gecko": {
      "id": "urlbar-dynamic-weather@mozilla.org",
      "strict_min_version": "84.0"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "urlbar-dynamic-weather@mozilla.org",
      "strict_min_version": "84.0"
    }
  },
  "permissions": [
    "https://apidev.accuweather.com/*",
    "storage",
    "tabs",
    "urlbar"
  ],
  "background": {
    "scripts": [
      "shim.js",
      "secret_keys.js",
      "background.js"
    ]
  },
  "incognito": "spanning",
  "experiment_apis": {
    "experiments_urlbar": {
      "schema": "experiments/urlbar/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["experiments", "urlbar"]],
        "script": "experiments/urlbar/api.js"
      }
    }
  }
}
